# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $bindir ~/.i3

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--10-100-75-75-C-60-iso10646-1

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec $bindir/xtermcd
bindsym $mod+mod1+Return exec xterm

# kill focused window
bindsym $mod+Shift+c kill

# start dmenu
bindsym Mod1+space exec "dmenu_run -i -p run: -nb \#1f1f1f -nf \#A0A0A0 -sb \#285577 -sf white"

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+b split h

# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f exec $bindir/i3fullscreen

# toggle dzen2 bar
# bindsym $mod+n exec $bindir/toggle-dzen

# check emails on inbox
bindsym $mod+o exec $bindir/checkmailfast
bindsym $mod+Shift+o exec $bindir/checkmail

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
bindsym $mod+e layout default

# toggle tiling / floating
bindsym $mod+Control+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+d focus child

# switch to workspace
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# Switch workspaces with meta-tab
bindsym $mod+Tab workspace back_and_forth

# Cycle through used workspaces
bindsym $mod+mod1+h workspace prev
bindsym $mod+mod1+l workspace next

# move focused container to workspace
bindsym $mod+Shift+1 move workspace 1
bindsym $mod+Shift+2 move workspace 2
bindsym $mod+Shift+3 move workspace 3
bindsym $mod+Shift+4 move workspace 4
bindsym $mod+Shift+5 move workspace 5
bindsym $mod+Shift+6 move workspace 6
bindsym $mod+Shift+7 move workspace 7
bindsym $mod+Shift+8 move workspace 8
bindsym $mod+Shift+9 move workspace 9
bindsym $mod+Shift+0 move workspace 10

# Move workspaces, not working in 4.1.2
# bindsym $mod+Shift+mod1+h move output left
# bindsym $mod+Shift+mod1+l move output right


# Bind media keys
# alsa + amixer needed
# bindsym XF86AudioRaiseVolume exec amixer -q set Master 2dB+ unmute
# bindsym XF86AudioLowerVolume exec amixer -q set Master 2dB- unmute
# bindsym XF86AudioMute exec amixer -q set Master toggle
# bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 15
# bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 15
bindsym $mod+F12 exec amixer -q set Master 2dB+ unmute
bindsym $mod+F11 exec amixer -q set Master 2dB- unmute
bindsym $mod+F10 exec amixer -q -D pulse set Master toggle

# Bind MPD keys
bindsym Mod1+Control+Up exec mpc toggle
bindsym Mod1+Control+Left exec mpc prev
bindsym Mod1+Control+Right exec mpc next

# reload the configuration file
bindsym $mod+Shift+e reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3
bindsym $mod+Shift+q exec $bindir/i3-exit
bindsym XF86PowerOff exec $bindir/i3-exit

# open email
bindsym $mod+m exec xterm -name mail -e mutt

# open sublime
bindsym $mod+p exec subl

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym h resize grow left 5 px or 5 ppt
        bindsym j resize grow down 5 px or 5 ppt
        bindsym k resize grow up 5 px or 5 ppt
        bindsym l resize grow right 5 px or 5 ppt
        bindsym Shift+h resize shrink right 5 px or 5 ppt
        bindsym Shift+j resize shrink up 5 px or 5 ppt
        bindsym Shift+k resize shrink down 5 px or 5 ppt
        bindsym Shift+l resize shrink left 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
      status_command i3status
      tray_output none
      position top
      colors {
                background #1f1f1f
                statusline #C5C8C6 
                # item                        border   bg   fg
                # for multi monitor:
                #focused_workspace #101010 #101010 #51df1d
                active_workspace #3300FF #101010 #101010
                # inactive_workspace #363636 #282828 #A0A0A0
                urgent_workspace #2e3436 #9a878f #000000
        }
}

# Start all the custom goodness
exec --no-startup-id $bindir/autostart
# desktop apps
# exec --no-startup-id i3-msg 'workspace 3; exec blah; workspace 1'

# custom window settings
assign [class="Google-chrome"] 2
assign [class="Eclipse"] 3
assign [instance="mail"] 8
assign [class="Mendeleydesktop"] 6

for_window [class="XTerm" instance="scratchpad"] move scratchpad
for_window [class="Google-chrome"] border 1pixel
for_window [class="Eclipse"] border 1pixel
for_window [class="I3-exit"] floating enable, border 1pixel
for_window [class="com-mathworks-util-PostVMInit"] floating enable
for_window [class="Android SDK Manager"] floating enable
for_window [class="mpv"] floating enable
for_window [class="Xdot"] floating enable
for_window [class="sxiv"] floating enable
for_window [class="Meshlab"] floating enable; resize shrink right 100px or 100ppt; resize shrink left 100px or 100ppt; resize shrink up 100px or 100ppt; resize shrink down 100px or 100ppt
for_window [class="Sublime_text"] border 1pixel
for_window [class="Mendeleydesktop"] border 1pixel

