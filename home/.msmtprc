# My ETH official account -------------------------------------
account ETH
host mail.ethz.ch
port 587
# ETH uses the (very much) obscure NTLM auth method, requiring
# a domain and TLS
auth ntlm
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
from federico.camposeco@inf.ethz.ch
user fcampose
passwordeval pass ETH/email
ntlmdomain d

# Set default account
account default : ETH

