!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------

Xft.dpi:                    96
! Xft.antialias:              true
! Xft.rgba:                   rgb
! Xft.hinting:                true
! Xft.hintstyle:              hintslight

!
! XTERM ========================
XTerm*termName:             xterm-256color
XTerm*renderFont:           true
! xterm*faceName:             Meslo LG M for Powerline
! xterm*faceName:            Inconsolata for Powerline
! xterm*faceName:            Droid Sans Mono for Powerline
XTerm*faceName:            Source Code Pro for Powerline
! xterm*faceName:            Anonymous Pro for Powerline
XTerm*faceSize:             9
XTerm*utf8:                 2
XTerm*utf8Title:            1
XTerm*saveLines:            65535
XTerm*scrollBar:            false
XTerm*multiScroll:          true
XTerm*locale:          true
XTerm*toolBar:              false
XTerm*selectToClipboard:    true
XTerm*metaSendsEscape:      true
XTerm*vt100.translations: #override \
        Shift <KeyPress> Insert:  string(0x1b) string(0x5b) string(2;2~) \n\
        Ctrl Shift <KeyPress> C:  select-end(PRIMARY,CLIPBOARD,CUT_BUFFER0) \n\
        Ctrl Shift <KeyPress> V:  insert-selection(CLIPBOARD, CUT_BUFFER0, PRIMARY)
XTerm*VT100.colorMode:      on
XTerm*dynamicColors:        on
XTerm*xftAntialias:         1
XTerm*cjkWidth:             0

