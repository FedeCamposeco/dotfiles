#!/usr/bin/bash

# Trivial utility to join pdf's using GhostScript

if test $# -lt 2
then
	echo "Usage: pdfjoin <out_name.pdf> <input_list>"
fi
gs -dBATCH -dNOPAUSE\
 -sDEVICE=pdfwrite \
 -sPAPERSIZE=a4 \
 -dFIXEDMEDIA \
 -dPDFFitPage \
 #-dCompatibilityLevel=1.4 \
 $@
#gs -dBATCH -dNOPAUSE -q -sDEVICE=pdfwrite -sOutputFile=$@
# use a very fancy setting for concatenating pdf's. This would try to speed-up 
# concatenation by not processing images at all.
#gs \
 #-o $1 \
 #-sDEVICE=pdfwrite \
 #-dColorConversionStrategy=/LeaveColorUnchanged \
 #-dDownsampleMonoImages=false \
 #-dDownsampleGrayImages=false \
 #-dDownsampleColorImages=false \
 #-dAutoFilterColorImages=false \
 #-dAutoFilterGrayImages=false \
 #-dColorImageFilter=/FlateEncode \
 #-dGrayImageFilter=/FlateEncode \
  #${@:2}

