#!/bin/sh
# Only allow urxvt to run tmux
if `echo $TERM | grep "rxvt" 1>/dev/null 2>&1`
then
	tmux has-session -t music &> /dev/null
	if [ $? != 0 ]
	then
		tmux new-session -d -s music 'vimpc'
		tmux set set-remain-on-exit on
		tmux select-window -t music:0
		tmux split-window -p 20
		tmux split-window -h -p 40 -t 1
		tmux send-keys -t 1 'lyvi' C-m
		tmux send-keys -t 2 'export PS1=' C-m
		tmux send-keys -t 2 C-l
		tmux select-pane -t 0
		tmux -2 attach-session -d -t music
	else
    tmux send-keys -t music:0.2 C-l
    tmux send-keys -t music:0.1 'ss'
    tmux -2 attach-session -d -t music
	fi
else
	urxvt -e ~/bin/tmux-player
fi

